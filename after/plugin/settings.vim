" Basics
set autoindent
set encoding=utf-8
set mouse=a
set nobackup
set noswapfile
set nowrap
set nowritebackup
set number
set relativenumber
set scrolloff=5
set sidescroll=10
set shiftwidth=0
set smarttab
set updatetime=40
set tags=tags
set notagrelative
set exrc
set foldmethod=expr
set foldexpr=v:lua.vim.treesitter.foldexpr()
set foldnestmax=4
set foldlevelstart=3

filetype on
filetype plugin indent on

set list
set shiftwidth=4 softtabstop=2 expandtab
set laststatus=3
